<aside class="side_menu">
  <p class="banner">
    <div class="panda_comment"><%= image_tag @blog_current.image.url %></div>
    <div class="panda_comment">つぶやいた数：<%= @count %></div>
    <div class="panda_comment">こんにちは、<%= @blog_current.name %>さん。</div>
  </p>
</aside>
<p>タイトル: <%= @blog.title %></p>
<p>内容: <%= @blog.content %></p>
<p>投稿者: <%= @blog.user.name %></p>
<p id="notice"><%= notice %></p>
<p><%= image_tag @blog.image.url %></p>
<p><%= link_to "ブログを編集する", edit_blog_path(@blog.id), data: { confirm: '本当に編集していいですか？' } %></p>
<p><%= link_to 'ブログを削除する', blog_path(@blog.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></p>
