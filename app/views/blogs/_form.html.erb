<%= form_with(model: @blog, local: true ,url: choose_new_or_edit ) do |form| %>
  <% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= @blog.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @blog.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="blog_title">
    <div><%= form.label :title %></div>
    <div><%= form.text_field :title %></div>
  </div>
  <div class="blog_title">
    <div><%= form.label :content %></div>
    <div><%= form.text_field :content %></div>
  </div>
  <div class="blog_title">
    <div><%= form.label :image %></div>
    <div><%= image_tag(@blog.image.url) if @blog.image && @blog.image.url %></div>
    <div><%= form.file_field :image %></div>
    <div><%= form.hidden_field :image_cache %></div>
  </div>
  <div class="actions">
    <div><%= form.submit %></div>
  </div>
  <% end %>
  <div><%= link_to "ブログ一覧画面にもどる", blogs_path %></div>
